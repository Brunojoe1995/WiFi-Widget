<resources>

    <!-- SplashScreen -->

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_foreground</item>
        <item name="windowSplashScreenBackground">@color/primary</item>
        <item name="postSplashScreenTheme">@style/Theme.AppCompat</item>
    </style>

    <!-- Widget -->

    <style name="Widget.WiFiWidget.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:padding">?attr/appWidgetPadding</item>
        <item name="android:background">@drawable/shape_widget_background</item>
    </style>

    <style name="Widget.Wifi.Property.TextView" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_widget_wifi_property</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.Wifi.Property.Label" parent="Widget.Wifi.Property.TextView">
<!--        <item name="android:textStyle">italic</item>-->
        <item name="android:textColor">@color/blue_chill</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Widget.Wifi.Property.Value" parent="Widget.Wifi.Property.TextView">
        <item name="android:textColor">@color/mischka_dark</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

</resources>